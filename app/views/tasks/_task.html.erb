<div class="row clearfix" data-task="<%= task.id %>">
  <% if task.completed? %>
    <div class="complete">
	  <% if (current_user.id == @project.user_id) %>
	    <%= link_to(incomplete_project_task_path(@project, task.id), :remote => true) do %>
	    <i style="opacity:0.4;" class="fa fa-check"></i>
	  <% end %>
      <% end %>
	</div>
	<div class="todo_item">
	  <p style="opacity: 0.4;"><strike><%= task.content %></strike></p>
    </div>
	<div class="trash">
	  <% if (current_user.id == @project.user_id) %>
		<%= link_to project_task_path(@project, task.id), method: :delete, :remote => true, data: { confirm: "Are you sure?" } do %>
		<i class="fa fa-trash"></i>
	    <% end %>
	  <% end %>	
	</div>
  <% else %>
    <div class="complete">
	    <% if (current_user.id == @project.user_id) %>
	    <%= link_to(complete_project_task_path(@project, task.id), :remote => true) do %> 
	    <i class="fa fa-check"></i>
	    <% end %>
	  <% end %>
	</div>
	<div class="todo_item">
	  <p><%= task.content %></p>
	</div>
	<div class="trash">
	  <% if (current_user.id == @project.user_id) %>
		<%= link_to project_task_path(@project, task.id), method: :delete, :remote => true, data: { confirm: "Are you sure?" } do %>
		<i class="fa fa-trash"></i>
	  <% end %>
	  <% end %>	
	</div>
  <% end %>
</div>